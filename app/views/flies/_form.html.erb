<%= form_for(@fly, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :classification, class: "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :classification, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit class: "btn btn-primary"%>
    </div>
  </div>
<% end %>
